<%- layout("/layouts/boilerplate")%>
<body>
<div class="row mt-3 ">
    <div class="col-6 offset-3">
        <form method="post" action="/company/details" novalidate class="needs-validation mb-10">
                <div class="mb-3"> 
                    <label for="name" class="form-label"><b>Company Name</b></label>
                    <input id="name" name="list[companyName]" placeholder="name" type="text" class="form-control" required>
                </div>
                <div class="mb-3 ">
                    <label for="typeOf" class="form-label"><b>Type Of Company</b></label>
                    <input id="typeOf" name="list[typeOf]" placeholder="type of company"  type="text" class="form-control"  required>
                </div>
                <div class="mb-3 ">
                    <label for="companyDetails" class="form-label"><b>Details</b></label>
                    <textarea id="companyDetails" name="list[companyDetails]" placeholder="detail descriiption"  type="text" class="form-control"  required></textarea>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label for="locationcity" class="form-label"><b>City</b></label>
                        <input id="locationcity" name="list[location][city]" placeholder="city name"  type="text" class="form-control"  required>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label for="locationstate" class="form-label"><b>State</b></label>
                        <input id="locationstate" name="list[location][state]" placeholder="state"  type="text" class="form-control"  required>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="country" class="form-label"><b>Country</b></label>
                    <input id="country" name="list[country]"  type="text" class="form-control"  required>
                </div>
                <div class="mb-3">
                    <label for="contactNumber" class="form-label"><b>ContactNumber</b></label>
                    <input id="contactNumber" name="list[contactNumber]"  type="string" class="form-control"  required>
                </div>
                <div class="mb-3">
                    <label for="website" class="form-label"><b>Website</b></label>
                    <input id="website" name="list[website]"  type="string" class="form-control"  required>
                </div>
                <button class="btn btn-success">Save</button>
        </form>
    </div>
</div>
</body>